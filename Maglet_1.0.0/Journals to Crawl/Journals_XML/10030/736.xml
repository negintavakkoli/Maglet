Number = {65}, 
pages = {47-69}, 
publisher = {Kharazmi University},
title_fa = {تصویر دل در مخزن‌الاسرار نظامی گنجوی},
abstract_fa ={این پژوهش درصدد جواب&#8204;دادن به این پرسش است که &#171;دل&#187; در مخزن&#8204;الاسرار، که زهدآمیز و عرفانی است، چگونه تبیین شده و دارای چه مراتبی است. فرضیه&#8204;ای که در ذهن خواننده و پژوهشگر شکل می&#8204;گیرد، این است که نظامی تلقی خاصی از &#171;دل&#187; داشته و به سبب این&#8204;که یکی از مهم&#8204;ترین بخش&#8204;های مثنوی مخزن&#8204;الاسرار را به آن اختصاص داده، در پی شکل&#8204;دهی شاعرانه ـ عارفانه به آن مفهوم و بن&#8204;مایه بوده است. شیوه بررسی در این مقاله، تحلیل محتوایی (Content Analysis) است که با استفاده از آن و تجزیه و تحلیل داده&#8204;های متن، به ابعاد گوناگون سؤال&#8204;های&#8204; طرح&#8204;شده، پاسخ داده شده است.},
keywords_fa = {نظامی , مخزن‌الاسرار , دل ,},
