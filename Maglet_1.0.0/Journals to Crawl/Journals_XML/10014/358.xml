@article{ 
author = {Mobinidehkordi, Ali and Dehghannajmabadi, Amer and Mohammadi, AliReza and Piran, Mohamm},  
title = {The Impact of Transformational Leadership on Organizational Innovation: A Study of the National Iranian Gas Company}, 
abstract ={This paper aims to investigate the effect of transformational leadership on organizational innovation among line and senior managers of national Iranian gas company. This study is practical in terms of the objective, descriptive survey in terms of gathering data procedure and finally quantitative with regards to the gathered data. Our research population contains all of the line and senior managers of national Iranian gas company who are about 400 people. The Cochran formula was employed to calculate 227 people as the statistical sample of our paper. Structural equation modeling (SEM) and partial least squares (PLS) was used for analyzing our data. Our findings indicate the significant impact of transformational leadership on organizational innovation. Moreover, theanalyseof four factors: idealized influence, inspirational motivation, intellectual stimulation and individual consideration exhibit the significant role of them on organizational innovation.},  
Keywords = {Transformational Leadership- Organizational Innovation- The National Iranian Gas Company},
volume = {5},
Number = {19}, 
pages = {161-197}, 
publisher = {Institute for International Energy Studies},
title_fa = {بررسی  تاثیر رهبری تحول آفرین بر نوآوری منابع انسانی در سازمان (مورد مطالعه: شرکت ملی گاز ایران)},
abstract_fa ={&#160;هدف از این پژوهش بررسی تاثیر رهبری تحول &#173;آفرین بر نوآوری سازمانی در میان مدیران میانی و ارشد اجرایی شرکت ملی گاز ایران است. این پژوهش از نظر هدف کابردی، از نظر نحوه&#173; ی گردآوری داده &#173;ها از نوع توصیفی-پیمایشی و از لحاظ داده های جمع آوری شده از نوع کمی می باشد. .جامعه آماری پژوهش را کلیه مدیران میانی و ارشد شرکت ملی گاز ایران تشکیل می دهد که 400 نفر می &#173;باشد و با استفاده از فرمول کوکران تعداد 227 نفر به عنوان نمونه آماری انتخاب شده است. برای تحلیل داده ها از مدل معادلات ساختاری و روش حداقل مجذورات جزئی (PLS) استفاده شد. یافته&#173; های پژوهش حاکی از ارتباط معنی دار بین این دو متغیر بوده وتعداد چهار فاکتور مورد بررسی قرار گرفته که براساس مدل معادلات ساختاری، شاخص &#173;های نفوذ آرمانی، انگیزش الهام &#173;بخش، ترغیب ذهنی و ملاحظات فردی نقش موثری بر نوآوری سازمانی دارد},
