@article{ 
author = {bagheri, Moslem and alishiri, Mohammad Mahdi and tavallaee, Rohollah and tahmasebi, Siamak},  
title = {Talent Management in Iranian oil industry: effected factors and main orientation}, 
abstract ={Talent Management is one of the most recent development in HRM which many human resource specialists in the world are working on it. Successful implementation of TM has a great impact on strategic human resource management. Iranian oil industry, with its considerable economic and technological importance, has a great capability to use this system. &#160;In this paper, based on deep interview with oil industry experts, using snowball technique and qualitative methodology, we tried to study environmental and organizational factors which impacts on TM main orientation implementation in Iranian oil industry. We classified this factors in environmental factors in general environment of the industry, challenges in oil industry HRM and definition of talent in it. At last, we propose a competitive orientation for TM in Iranian oil industry},  
