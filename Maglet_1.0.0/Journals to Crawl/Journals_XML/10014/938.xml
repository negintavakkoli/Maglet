@article{ 
author = {BamdadSoofi, Jahanyar and Hosseinisafa, Sedigheh and Motaghi, Mohammad and Pahlevani, Abdol karim},  
title = {Human Resource Management Productivity: Designing an Evaluation Model}, 
abstract ={This article, explains a model for evaluating productivity of human resource management. The research used a filed survey method. The research design is developing &#8211;practical by using mixed method in data gathering and its analysis. The statistical population of study is Iranian Oil and Gas Industry. For data analysis, structural equation model is used. On the base of results, there is a linear relation between forth dimensions of research model. Effectiveness in strategic level (with performing strategic partner role) is independent variable, Efficiency dimensions in Strategic and operational Level (with performing HR developer and Management of Firm Infrastructure roles) are intermediate variable and effectiveness dimension in operational level (with performing servicing stakeholders) is dependent variable. The developed model can apply for evaluating, diagnosis and analyzing the productivity of HRM system in Iranian oil and Gas Industry},  
Keywords = {Human resource management Productivity evaluation Effectiveness Efficiency Strategic Operational level},
volume = {7},
Number = {26}, 
pages = {63-89}, 
publisher = {Institute for International Energy Studies},
title_fa = {طراحی الگویی برای ارزیابی بهره‌وری نظام مدیریت منابع انسانی در صنعت نفت},
