@article{ 
author = {AfkhamiArdakani, Mehdi and Noori, Behrooz and Varmazyar, Mohse},  
title = {Effect of HRM on Building Technological Capability in RTOs
(Case Study: RIPI)}, 
abstract ={Human resource management and development is one of the most important factors of technological capability in research and technology organizations. Development of this factor enhances the mechanism of organization technological capability building. This research evaluates the roles of human resource management and development processes on technological capability building mechanism in Research Institute of Petroleum Industry of Iran (RIPI). DEMATEL technique is applied to determine the relation of human resource management and development and technological capability building mechanism factors with survey of experts. The results show that education, development and promotion and recruitment are the most effective human resource management processes on technological capability building mechanism. Therefore, improvement of these factors leads to development of organizational culture, knowledge management system, and more effective support of top managers on technological capability building.},  
Keywords = {Human Resource Management Technological Capability DEMATEL Technique Research Institute of Petroleum Industry (RIPI).},
volume = {7},
Number = {25}, 
pages = {47-75}, 
publisher = {Institute for International Energy Studies},
title_fa = {بررسی تأثیر مدیریت منابع انسانی بر ایجاد توانمندی فناورانه در سازمان‌های پژوهش و فناوری
(مطالعه موردی: پژوهشگاه صنعت نفت)},
abstract_fa ={مدیریت و توسعه صحیح منابع انسانی در سازمان&#8204;های پژوهش و فناوری از مهمترین اجزا توانمندی فناورانه می&#8204;باشد، که ارتقا این جز کمک شایانی به ایجاد توانمندی فناورانه در سازمان می&#8204;نماید. لذا در این تحقیق تلاش شده است تا با استفاده از مدلی پیشنهادی، نقش فرآیندهای مدیریت و توسعه منابع انسانی به عنوان عوامل تاثیرگذار بر مکانیزم&#8204;های ایجاد توانمندی فناورانه به عنوان عوامل تاثیرپذیر، در پژوهشگاه صنعت نفت ایران مورد سنجش قرار گیرد. در این تحقیق با استفاده از تکنیک دیمتل و نظرسنجی از خبرگان پژوهشگاه صنعت نفت، شدت ارتباطات بین عوامل در مدل پیشنهادی مورد بررسی قرار گرفت. بر اساس نتایج بدست آمده، آموزش، توسعه و بالندگی و استخدام و بکارگماری تاثیرگذارترین فرآیندهای مدیریت منابع انسانی بر مکانیزم&#8204;های ایجاد توانمندی فناورانه می&#8204;باشند که بایستی مورد توجه جدی قرار گیرد. بهبود این عوامل باعث بهبود فرهنگ سازمانی، ساختار مدیریت دانش و افزایش حمایت مدیران عالی از ایجاد توانمندی فناورانه در یک سازمان پژوهش و فناوری خواهد شد. &#160;},
keywords_fa = { مدیریت منابع انسانی , توانمندی فناورانه , تکنیک دیمتل , پژوهشگاه صنعت نفت},
