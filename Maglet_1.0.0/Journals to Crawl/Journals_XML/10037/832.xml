title_fa = {مقایسۀ روش گردش وارون با روش‌های مرسوم حفاری از نظر سرعت، هزینه، نوع نمونه حاصل و راندمان عملکرد، مطالعۀ موردی: معدن طلای اخترچی خمین},
abstract_fa ={در پژوهش حاضر روش حفاری گردش وارون (RC) با دیگر روش&#8204;های مهم، متداول و کاربردی حفاری مانند روش گردش مستقیم و مغزه&#8204;گیری از نظر معیارهای مختلف نظیر سرعت پیش&#8204;روی (زمان) حفاری، قیمت (هزینه)، نوع و کیفیت نمونه&#8204;های حاصل و راندمان عملکرد حفاری، مقایسه شده است. هم&#8204;چنین به&#8204;عنوان یک بررسی میدانی در این پژوهش، گمانه&#173;های عمیق حفاری شده در معدن طلای اخترچی خمین واقع در استان مرکزی با دو روش حفاری RC و مغزه&#8204;گیری، از جنبه&#8204;های مختلف بررسی و مقایسه شد. در انتها نیز توانایی انتخاب مناسب&#8204;ترین روش حفاری از میان روش&#8204;های مختلف بررسی شد. نتایج پژوهش نشان می&#8204;دهند که روش حفاری RC در مقایسه با دیگر روش&#8204;های حفاری به&#8204;ویژه انواع متداول و پرکاربرد، از نظر معیارهایی مانند هزینه&#8204;های حفاری و سرعت پیش&#8204;روی (زمان) حفاری، بسیار مطلوب و از نظر میزان عمق (متراژ) حفاری، نوع و کیفیت نمونه&#8204;های حاصل و راندمان کلی عملکرد حفاری، مطلوب است. اگرچه روش حفاری مغزه&#8204;گیری از نظر نوع و کیفیت نمونه&#8204;های حاصل و نیز میزان عمق (متراژ) حفاری، با توانایی حفر گمانه&#8204;های بسیار عمیق و گرفتن نمونه&#8204;های مغزه&#8204;ای، مطلوب&#8204;ترین است اما در ارتباط با حفاری اکتشافی (به ویژه در مراحل اکتشاف تکمیلی) کانسارهایی که عیار پایینی دارند و اثرات ماده معدنی خیلی کم است (همانند کانسار طلای اخترچی خمین) و در نتیجه نیاز به حجم زیاد نمونه است، استفاده از روش حفاری RC مزیت نسبی داشته و دارای صرفه اقتصادی است.},
keywords_fa = {حفاری گردش وارون (RC), حفاری مغزه‌گیری, سرعت حفاری, هزینه حفاری, نمونه‌های حاصل از حفاری, معدن طلای اخترچی خمین},
