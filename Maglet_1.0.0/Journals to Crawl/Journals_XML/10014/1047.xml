@article{ 
author = {AkhbariAzad, Mina and Abtahi, Asieh and Pourshojaei, Mohammad Hossei},  
title = {Knowledge Management Enablers and Measurement of Their Communication with Organization Performance}, 
abstract ={The purpose of this study was to explain the relationship between knowledge management Enablers and organizational performance in Nouri Petrochemical Company. This research is considered an applied research which was done by a descriptive-survey method. The statistical population has been consisted of 340 official employees of Nouri Petrochemical Company. By using random sampling method, 181 people were selected. Data analysis was done using descriptive and inferential statistics by SPSS and LISREL software. The results showed that in the field of knowledge management Enablers in the Nouri Petrochemical Company including information technology, culture and staff with Beta Coefficient of 0.405, 0.373 and 0.135, had the highest amount of relevance and impact on the process of creating knowledge, respectively. But organizational structure was not effective. Also, among the dimensions of creating knowledge process in this company, internalization, externalization and socialization with Beta Coefficient of 0.325, 0.268 and 0.176 have shown the highest degree of relevance and impact on organizational creativity. But the composition dimension was not effective. Ultimately, the results also showed that organizational creativity has a meaningful effect on organizational performance (Beta=0.610), supporting the main hypothesis of this research. &#160;},  
Keywords = { Knowledge Management, Organizational Creativity, Organizational Performance, Nouri Petrochemical Company

},
