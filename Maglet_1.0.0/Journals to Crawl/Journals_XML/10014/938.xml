eprint = {http://iieshrm.ir/article-1-40-en.pdf},  
journal = {Human Resource Management in The Oil Industry},  
issn = {2251-8886}, 
eissn = {2588-4409}, 
year = {2016}  
}

@article{ 
author = {Feizy, Tahereh and latifiJaliseh, Salimeh and malekpour, Laleh},  
title = {Evaluation Degree of Ethical in Petrochemical Economic Special Zone Organization}, 
abstract ={The main objective of this applied research is evaluating the degree of ethic in petrochemical special economic zone organization. The method of the following research is Cross Sectional Descriptive-Survey. The main sampling population was 261 employees (Including managers and staff), the sample of this research&#160; was 200 that have been selected by the simple accidental sampling method. Questionnaire is the applied method of the data gathering. Cronbach&#8217;s Alfa of this study was 0.97. For analysis of data, the mentioned methods and soft wares have been used: Hierarchical Confirmatory Factor Analysis, one sample T-test and Friedman Test, Also;&#160; the SPSS and Lisrel software. The conclusion has been made that an ethical organization should have three aspects of the moral individuals, leadership and structure. The measure of the ethics in the mentioned organization is less than the average},  
Keywords = {Ethical organizations individual ethic leadership ethic structure ethic petrochemical special economic zone organization},
volume = {7},
Number = {26}, 
pages = {115-143}, 
publisher = {Institute for International Energy Studies},
title_fa = {بررسی میزان اخلاقی بودن سازمان منطقه ویژه اقتصادی پتروشیمی},
abstract_fa ={تحقیق حاضر با هدف بررسی میزان اخلاقی بودن سازمان منطقه ویژه اقتصادی پتروشیمی انجام شده است. نوع تحقیق از نظر هدف کاربردی و از نظر روش توصیفی &#8211; پیمایشی مقطعی است. جامعه آماری تحقیق 261 تن از کارکنان (مدیران و پرسنل) منطقه ویژه اقتصادی پتروشیمی ماهشهر هستند، که تعداد 200 تن با روش نمونه&#8204;گیری تصادفی ساده به عنوان نمونه انتخاب شدند. ابزار گردآوری اطلاعات پرسشنامه است. آلفای کرونباخ پرسشنامه 0/97 است. تحلیل داده&#8204;ها با استفاده از روش تحلیل عاملی تاییدی سلسله مراتبی، آزمون Tتک نمونه ای، فریدمن و نرم افزارهای اس.پی.اس.اس و لیزرل 8/5 انجام شده است. نتایج نشان داد که سازمان اخلاقی دارای سه بعد افراد اخلاقی، رهبری اخلاقی، ساختارها و نظام&#8204;های اخلاقی است. همچنین افراد اخلاقی دارای مؤلفه&#8204;های ( اعتماد، درست رفتار کردن، در سطح عالی پرورش اخلاقی بودن) و رهبری اخلاقی دارای مؤلفه&#8204;های ( الگوی نقش بودن،&#8204;حفظ ارزش&#8204;های اخلاقی در سازمان، &#8204;پاداش دادن به رفتار اخلاقی و به انضباط در آوردن سریع رفتار غیراخلاقی) و ساختارها و نظام&#8204;های اخلاقی دارای مولفه های(فرهنگ سازمان، اصول اخلاقی، کمیته آموزش، سازو کارهای افشاگری) است &#160;},
keywords_fa = {سازمان اخلاقی , افراد اخلاقی , رهبری اخلاقی , ساختار و نظام‌های اخلاقی , پتروشیمی ماهشهر},
