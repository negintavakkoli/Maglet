keywords_fa = {گفتمان, پادگفتمان, نشانه‌ـ معناشناسی, نامه‌های نیما یوشیج},

doi = {10.29252/jpll.25.82.133},
url = {http://jpll.khu.ac.ir/article-1-2936-en.html},  
